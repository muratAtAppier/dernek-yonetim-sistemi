{
  "name": "dernek-yonetim-sistemi",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "prisma generate && next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down -v",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:studio": "prisma studio",
    "docker:build": "docker build -t dernek-yonetim-sistemi .",
    "docker:run": "docker run -p 3000:3000 dernek-yonetim-sistemi",
    "db:seed": "prisma db seed",
    "ci": "npm run lint && npm run typecheck && npm run build",
    "test": "vitest run",
    "db:verify": "node scripts/db-verify.js",
    "prisma:deploy": "prisma migrate deploy",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
