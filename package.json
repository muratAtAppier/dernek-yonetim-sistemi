    "clsx": "^2.1.1",
    "csv-parse": "^5.5.6",
    "date-fns": "latest",
    "docx": "^9.2.3",
    "lucide-react": "latest",
    "mustache": "^4.2.0",
    "next": "15.1.9",
    "next-auth": "latest",
    "nodemailer": "^6.9.14",
    "react": "latest",
    "react-dom": "latest",
    "react-hook-form": "^7.62.0",
    "twilio": "^5.4.4",
    "xlsx": "^0.18.5",
